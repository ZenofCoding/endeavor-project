    <a name="comment test"></a>
        <div class="content-section-a">

            <div class="container">
                <a class="btn btn-warning btn-lg" data-toggle="modal" data-target="#jobPostModal">Create New Job Posting</a>

                <!-- loops through each job -->
                {{#each jobs}}
                <!-- checks if job has been completed -->
                {{#unless this.completed}}

                <div class="row">
                
                    <div class="job-box-container">  
                        <a href="/viewJob/{{this.jobID}}">
                            <div class="job-box-small">
                                <div class="job-title-box">
                                    <h2 class="job-title">{{this.title}}</h2>
                                </div>
                                <img class="job-box-image1" src="{{this.image}}">
                                <p class="job-title-desc">{{this.description}}</p>
                                <div class="job-box-footer"></div>   
                            </div>          
                        </a>
                    </div>
                      
                      <!-- show any messages that come back with authentication -->
                    {{#if message}}
                        <div class="alert alert-danger">{{message}}</div> 
                    {{/if}}

                    <!-- COMMENT FORM -->
                    <form action="/comment/{{this.jobID}}" method="post">
                        <div class="form-group">
                            <label>Ask a question or comment on this posting.</label>
                            <textarea type="text" class="form-control" name="comment"></textarea>
                            <!-- <input type="hidden" name="this_id" data-id="{{this.jobID}}"> -->
                        </div>

                        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
                    </form>
            
                </div>
                {{/unless}}
                {{#if this.completed}}
                    <li class="names-devour">
                        <!-- runs if burger is NOT marked as eaten in DB -->
                        <!-- {{this.burger_name}} -->
                    </li>
                {{/if}}
                {{/each}}

