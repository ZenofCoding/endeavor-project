<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Endeavor</title>

    <!-- Bootstrap Core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/assets/css/landing-page.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- added links to style sheets -->
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="/endeavors" title="Home">Endeavor</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    {{#if user.displayName}}
                        <li>
                            <a href="/profile">{{user.displayName}}</a>
                        </li> 
                    {{else}}
                        <li>
                            <a href="/profile">{{user.username}}</a>
                        </li> 
                    {{/if}}
                    <li>
                        <a href="#about">About</a>
                    </li>
                    <li>
                        <a href="#services">Services</a>
                    </li>
                    <li>
                        <a href="#contact">Contact</a>
                    </li>
                    <li>
                        <a href="/jobsearch">JobSearch</a>
                    </li>
                    {{#if user}}
                        <li>
                            <a href="/logout">Logout</a>
                        </li>  
                    {{/if}}
                    {{#unless user}}
                    <li>
                        <a href="/login">Login</a>
                    </li>
                    <li>
                        <a href="/signup">Signup</a>
                    </li>
                    {{/unless}}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->

        <a class="news-banner hide" href="/notifications/{{user.id}}/{{user.username}}">      
            <div class="scroll-left"></div>
        </a>
        
    </nav>


    <!-- Header -->
<a name="about"></a>
    <div class="intro-header">
        <div class="container1">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Find a professional</h1>
                      
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="/jobsearch" class="btn btn-default btn-lg"></i> <span class="network-name">Search for work</span></a>
                            </li>
                            <li>
                                <a href="/login"" class="btn btn-default btn-lg"></i> <span class="network-name">Login</span></a>>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
        <!-- /.container -->

    </div>
        <!-- /.container -->

    <!-- Page Content -->

  <a name="services"></a>
     <div class="content-section-a">

        <div class="container">
            <!--get all the job categories -->
            <br>
            <div class="form-group">
              <label for="category">Category</label>
            <select id="category" class="form-control" name="category" onChange="changeUsers(this.value)" required>
                  <option value="">Choose a category</option>
                  {{#each category}}
                      <option id="category-val" name="category-val" data-categoryid="{{this.categoryID}}" value="{{this.categoryID}}">{{this.description}}</option>
                    {{/each}}
            </select>
        </div>
                
            <!-- loops through each job -->
        {{#each userHire}}
         

                <div class="row">

                    <div class="job-box-container">      
                            <div class="hire-box-small">
                                <div class="hire-title-box">
                                    {{#if this.displayName}}
                                        <h2 class="hire-title">{{this.displayName}}</h2> 
                                    {{else}}
                                        <h2 class="hire-title">{{this.username}}</h2>
                                    {{/if}}   
                                </div>
      
                                <a href="/public/profile/{{this.id}}">
                                    {{#if this.hasavatar}}
                                        <img class="job-box-image1" src="{{this.avatar}}" alt="User Profile Picture">
                                    {{else}}
                                        <img class="job-box-image1" src="http://s3.amazonaws.com/37assets/svn/765-default-avatar.png" alt="Default Profile Picture">
                                    {{/if}}
                                </a>
                                
                                {{#if this.summary}}
                                    <p class="job-title-desc">{{trimString this.summary}}</p>
                                {{/if}}

                                <div class="job-box-footer">
                                </div>

                            </div>            
                    </div>

                </div>
   
        {{/each}}

            <!-- loops through each job -->
        {{#each employee}}
         

                <div class="row">

                    <div class="job-box-container">  
                        
                        <div class="hire-box-small">
                            <div class="hire-title-box">
                                {{#if this.displayName}}
                                    <h2 class="hire-title">{{this.displayName}}</h2> 
                                {{else}}
                                    <h2 class="hire-title">{{this.username}}</h2>
                                {{/if}}
                            </div>
  
                            <a href="/public/profile/{{this.id}}">
                                {{#if this.hasavatar}}
                                    <img class="job-box-image1" src="{{this.avatar}}" alt="User Profile Picture">
                                {{else}}
                                    <img class="job-box-image1" src="http://s3.amazonaws.com/37assets/svn/765-default-avatar.png" alt="Default Profile Picture">
                                {{/if}}
                            </a>
                            
                            {{#if this.summary}}
                                <p class="job-title-desc">{{trimString this.summary}}</p>
                            {{/if}}

                            <div class="job-box-footer">
                            </div>
                        
                        </div>          
                       
                    </div>
            
                </div>
   
        {{/each}}


        </div>

    </div>

    <!-- Footer --> 
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#about">About</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#services">Services</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#contact">Contact</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; Endeavor 2016. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="/assets/scripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/scripts/bootstrap.min.js"></script>
<script type="text/javascript">

    function changeUsers(category){
        
      window.location.href = '/hire/' + category;  
    };
</script>

</body>

</html>